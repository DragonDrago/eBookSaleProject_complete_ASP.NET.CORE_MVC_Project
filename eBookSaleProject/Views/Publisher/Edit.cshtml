@model Publisher

@{
    ViewBag.Title = "Update the Publisher";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Update The Publisher</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">

                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group text-center">
                         <img  id ="ProfileLogoPreview" src="/Publisher/LogoImage/@Model.Id" class="img-fluid img-thumbnail" style="max-width:200px; max-height:200px;"  />
                    </div>
                   <div class="form-group">
                          <label asp-for="LogoUpload" class="control-label"></label>
                              <div class = "custom-file">
                                 <input  asp-for="LogoUpload" class="form-control" type="file" accept="image/*" />
                               </div>
                          <span asp-validation-for="LogoUpload" class="text-danger"></span>
                     </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control"/>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
               </form>

            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script>
        $(document).ready(function(){
             var output = document.getElementById('ProfileLogoPreview');
            output.src = $("#Logo").val();   
        });
        $("#Logo").on("change",function(){
            var output = document.getElementById('ProfileLogoPreview');
            output.src = $(this).val();
        });
    </script>
}