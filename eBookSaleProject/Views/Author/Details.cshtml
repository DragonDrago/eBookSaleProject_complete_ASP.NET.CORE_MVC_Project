@model Author

@{
    ViewBag.Title = "Details Author";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1 class="col-md-8 offset-2">Details for @Model.FullName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">

                
             
                    <div class="form-group text-center">
                         <img src = "/Author/AuthorImage/@Model.Id" class=" border-info rounded-circle" style="max-width:200px" />
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control" readonly />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Biography" class="control-label"></label>
                        <input asp-for="Biography" class="form-control" readonly  />
                        <span asp-validation-for="Biography" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <a class="btn btn-outline-success float-right" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                        }
                            <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                        </div>
               

            </div>
        </div>
    </div>
</div>

